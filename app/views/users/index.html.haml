.text-center
  %h2
    Leaderboard

.table-responsive
  %table.table.table-sm.table-striped.table-dark.shadow
    %thead
      %tr
        %th User
        %th Credits bought
        %th Credits Spent
        %th Credits won
        %th Balance
        %th Games played
        %th Games won
        %th.bg-success Score
  
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.to_s, user_path(user)
          %th= user.charges_sum
          %th= user.bets_sum
          %th= user.shares_won
          %td= user.balance
          %th= user.bets_count
          %th= user.roulettes_count
          %th.bg-success= user.leader_score

%br
