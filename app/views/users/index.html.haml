.text-center
  %h2
    Leaderboard

.table-responsive
  %table.table.table-sm.table-striped.bg-light.shadow
    %thead
      %tr
        %th User
        %th Balance
        %th Charges sum
        %th Charges count
        %th Shares sum
        %th Shares count
        %th Amount won
        %th Victories
  
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.to_s, user_path(user)
          %td= user.balance
          %th= user.charges_sum
          %th= user.charges_count
          %th= user.bets_sum
          %th= user.bets_count
          %th= user.amount_won
          %th

%br
